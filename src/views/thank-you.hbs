<div class="mt-4 p-5 rounded">
    <h1>Thank you <i class="fa-solid fa-heart"></i> for your purchase </h1>
     <p>Your order ID is: <span id="order-id"></span></p>

    <script>
      // Get the orderID parameter from the URL
      var params = new URLSearchParams(window.location.search);
      var orderID = params.get('orderID');

      // Display the orderID on the thank you page
      var orderIDElement = document.getElementById('order-id');
      orderIDElement.textContent = orderID;
    </script>
   <a href="/cart" class="btn btn-primary btn-lg">Test the shopping cart again!</a>  <a href="/" class="btn btn-primary btn-lg">Go to the main again!</a>
    
</div>